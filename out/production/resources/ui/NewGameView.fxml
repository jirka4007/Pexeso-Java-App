<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.pexeso.ui.NewGameController">
    <children>
        <Label text="Nová hra">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <Label text="Velikost mřížky:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <ComboBox fx:id="gridSizeComboBox" prefWidth="200.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Téma:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="themeComboBox" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Label text="Jméno hráče (nepovinné):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="playerNameField" prefWidth="200.0" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="startButton" text="Spustit hru" onAction="#startGame" />
            <Button fx:id="backButton" text="Zpět" onAction="#goBack" />
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
