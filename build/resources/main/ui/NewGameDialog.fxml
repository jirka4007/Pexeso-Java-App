<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.pexeso.ui.NewGameDialogController">
    <headerText>
        Nastavení nové hry
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Velikost mřížky:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <ComboBox fx:id="gridSizeComboBox" prefWidth="150.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Téma:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="themeComboBox" prefWidth="150.0" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        </GridPane>
    </content>
</DialogPane>
